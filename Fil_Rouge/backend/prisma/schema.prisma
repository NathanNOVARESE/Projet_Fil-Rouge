// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  email      String   @unique
  password   String
  isAdmin    Boolean  @default(false)
  createdAt  DateTime @default(now())
  bio        String?
  avatar     String?
  banner     String?
  forums     Forum[]
  topics     Topic[]
  posts      Post[]   @relation("UserPosts")
}

model Forum {
  id         Int      @id @default(autoincrement())
  title      String
  description String?
  createdAt  DateTime @default(now())
  ownerId    Int
  owner      User     @relation(fields: [ownerId], references: [id])
  topics     Topic[]
  posts      Post[]
}

model Topic {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  game       String
  category   String
  tags       String?  // Stocke les tags sous forme de texte JSON
  createdAt  DateTime @default(now())
  forumId    Int
  createdBy  Int
  forum      Forum    @relation(fields: [forumId], references: [id])
  user       User     @relation(fields: [createdBy], references: [id])
  posts      Post[]   @relation("TopicPosts")
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  game       String
  category   String
  tags       String?  // <-- Correction ici
  createdAt  DateTime @default(now())
  forumId    Int
  createdBy  Int
  topicId    Int?
  user       User     @relation("UserPosts", fields: [createdBy], references: [id])
  forum      Forum    @relation(fields: [forumId], references: [id])
  topic      Topic?   @relation("TopicPosts", fields: [topicId], references: [id])
}

model Task {
  id       Int      @id @default(autoincrement())
  title    String
  priority String   // Utilise String Ã  la place de l'enum
}
